RelativeLayout:
    MDBoxLayout:
        md_bg_color:"#242728"
        RelativeLayout:
            Image:
                pos_hint:{"center_x":0.5,"center_y":0.7}
                size_hint:0.5,0.5
                source:"icons/infowidgets.png"
            MDBoxLayout: 
                pos_hint:{"center_x":0.5,"center_y":0.23}
                size_hint:0.85,0.33
                md_bg_color:"#303341"
                orientation:"vertical"
                radius:[dp(10),dp(10),dp(10),dp(10)]
                BoxLayout:
                    AnchorLayout:
                        size_hint:0.2,1
                        anchor_x:"right"
                        MDIcon:
                            icon:"weather-sunny"
                    MDSlider:
                        max:app.BrightNessInfo().max_brightness()
                        min:0
                        value:app.BrightNessInfo().current_brightness()
                        hint:False
                        on_active:app.BrightNessInfo().change_brightness(str(round(self.value)))
                BoxLayout:
                    AnchorLayout:
                        anchor_x:"right"
                        size_hint:0.2,1
                        MDIcon:
                            icon:"volume-high"
                    MDSlider:
                        max:500
                        min:0
                        hint:False
                        value:app.ControlSound.get_volume()[:-2]
                        on_active:app.ControlSound.increase_volume(str(self.value)+"%")

    MDBoxLayout:
        md_bg_color:"#242728"
        id:hider
